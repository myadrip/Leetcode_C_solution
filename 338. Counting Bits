//https://leetcode.com/problems/counting-bits/

/**
 * Note: The returned array must be malloced, assume caller calls free().
 */
int count(int n)
{
    int ret = 0;
    while(n>0)
    {
        if(n%2 == 1)
        {
            ret++;
        }
        n = n>>1;
    }
    return ret;
    
}
int* countBits(int num, int* returnSize)
{
    int* ret = (int*)malloc(sizeof(int)*(num+1));
    (*returnSize) = num+1;
    
    for(int i = 0; i < num+1; i++)
    {
        ret[i] = count(i);
    }
    
    return ret;
}

