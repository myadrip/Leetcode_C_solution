//https://leetcode.com/problems/lemonade-change/



bool lemonadeChange(int* bills, int billsSize)
{
    int n5 = 0;
    int n10 = 0;
    int n20 = 0;
    
    for(int i = 0; i < billsSize; i++)
    {
        switch(bills[i])
        {
            case 5:
                n5++;
                break;
            case 10:
                n5--;
                n10++;
                if(n5 < 0)
                    return false;
                break;
            case 20:
                n20++;
                if(n10>0 && n5>0)
                {
                    n5--;
                    n10--;
                }
                else
                {
                    n5 = n5-3;
                }
                if(n5 < 0)
                    return false;
                break;
                
        }
    }
    
    return true;

}
