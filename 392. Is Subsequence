//https://leetcode.com/problems/is-subsequence/

bool isSubsequence(char* s, char* t)
{
    int len1 = strlen(s);
    int len2 = strlen(t);
    
    if(len1 > len2)
        return false;
    
    int idx1 = 0;
    int idx2 = 0;
    
    while( idx1 < len1 && idx2 < len2)
    {
        if(s[idx1] == t[idx2])
        {
            idx1++;
            idx2++;
        }
        else
            idx2++;
    }
    
    if(idx1 == len1)
        return true;
    else
        return false;
}
