//https://leetcode.com/problems/is-subsequence/

bool isSubsequence(char* s, char* t)
{
    int len1 = strlen(s);
    int len2 = strlen(t);
    
    if(len1 > len2)
        return false;
    
    int idx1 = 0;
    int idx2 = 0;
    
    while( idx1 < len1 && idx2 < len2)
    {
        if(s[idx1] == t[idx2])
        {
            idx1++;
            idx2++;
        }
        else
            idx2++;
    }
    
    if(idx1 == len1)
        return true;
    else
        return false;
}

=======================================================================================================================
bool isSubsequence(char * s, char * t)
{
    
    int str1 = strlen(s);
    int str2 = strlen(t);
    int pos = 0;
    if(str1 == 0)
        return true;
    
    for(int i = 0; i < str2; i++)
    {
        if(s[pos] == t[i])
        {
            pos++;
            if(pos == str1)
                return true;
        }        
    }
    
    return false;
}
