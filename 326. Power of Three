//https://leetcode.com/problems/power-of-three/



bool isPowerOfThree(int n)
{
    if(n < 1)
        return false;

    while(n >= 3)
    {
        if( n%3 != 0)
            return false;
        else
        {
            n = n/3;
        }
    }
    if(n == 1)
        return true;
    else
        return false;

}
