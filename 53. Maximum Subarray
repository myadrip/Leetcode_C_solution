//https://leetcode.com/problems/maximum-subarray/


int Bigger(int a, int b)
{
    if(a > b)
        return a;
    else
        return b;
}


int maxSubArray(int* nums, int numsSize)
{
    int max = nums[0];
    int current = nums[0];
    
    for(int i = 1; i < numsSize; i++)
    {
        current = Bigger(nums[i], current+nums[i]);
        
        if(current > max)
            max = current;
    }
    
    return max;

}
